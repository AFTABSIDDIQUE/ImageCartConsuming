@model ImageCartConsuming.Models.AddImageCartDTO

@{
    ViewData["Title"] = "Add Image";
}

<h1 class="mb-4">Add Image</h1>

<div class="row">
    <div class="col-md-6">
        <span style="color:darkgreen">@TempData["message"]</span>
        <form asp-action="AddImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="ImageName" class="form-label"></label>
                <input asp-for="ImageName" class="form-control" placeholder="Enter image name" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Images" class="form-label"></label>
                <input asp-for="Images" type="file" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="AddImage" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
